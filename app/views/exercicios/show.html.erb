
<p id="notice"><%= notice %></p>



<div class="container text-center">
  <div class="row text-center">
    <div class="col-sm-10">
      <p>
        <strong>Nome:</strong>
        <%= @exercicio.nome %>
      </p>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-sm-10">
      <p>
        <strong>Grupo muscular:</strong>
        <%= @exercicio.grupo_muscular %>
      </p>
    </div>
  </div>

  <div class="row text-center">
    <div class="col-sm-10">
      <strong>Descricao:</strong>
      <%= @exercicio.descricao %>
    </div>
  </div>
</div>
<br><br>

<% if current_user.admin? or current_user.professor? %>
  <%= link_to 'Editar', edit_exercicio_path(@exercicio), :class => "btn btn-info btn-sm" %> |
<% end %>
<%= link_to 'Voltar', exercicios_path, :class => "btn btn-info btn-sm" %>
