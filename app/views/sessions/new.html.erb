<div class="p-3 mb-2 bg-light text-dark">
  <div class="container">
  <div class="row">

    <div class="col-4">
    </div>

    <div class="col-4">
      <%= form_for :session, url: sign_in_path do |f| %>
      <br> <br>
      <img src="/images/dumbbell-solid.svg" alt="" width="80" height="80" color="#1e111d">
      <br>
      <h1 class="h3 mb-3 font-weight-normal">Login</h1>

      <div class="form-group">
        <div class="field">
          <strong>
            <%= f.label :email, class: 'form-label center' %><br />
          </strong>

          <%= f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email'%>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <strong>
            <%= f.label :senha, class: 'form-label center' %><br />
          </strong>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:'Senha' %>
        </div>
      </div>

      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>

      <div class="container">
        <div class="actions" id="submit">
          <%= f.submit "Entrar", class: 'btn btn-lg btn-info btn-block' %>
        </div>
      </div>

      <% end %>
    </div>

    <div class="col-4">
    </div>

  </div>
  </div>
</div>
